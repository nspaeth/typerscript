{
  "compilerOptions": {
    "module": "commonjs",
		"declaration": true,
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
		"baseUrl": "./src/",
		"skipLibCheck": true,
		"lib": [
			"dom",
			"es2020"
		],
		"outDir": "dist",
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"types": [
			"react",
			"react-dom",
			"intern"
		]
  },
	"filesGlob": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
    "node_modules",
		"dist"
	],
		"types": [
		"react",
		"react-dom",
		"intern"
	]
}
